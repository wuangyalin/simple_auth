{% extends 'base.html.twig' %}
{% block body %}
    <div class="row"> 
        <a href="/" class="btn btn-danger">Back to main</a>
    </div>
    <h1 class="text-center mt-5"> Detail for {{user.username}} </h1>

<table class="table mt-5">
  <thead>
    <tr>
      <th scope="col">User ID</th>
      <th scope="col">User Name</th>
      <th scope="col">Email</th>
      <th scope="col">User Role(s)</th>
      {% if is_granted('ROLE_ADMIN') %}
      <th scope="col">Handle</th>
       {% endif %}
    </tr>
  </thead>
  <tbody>
    <tr>
      <th scope="row">{{user.id}}</th>
      <td>{{user.username}}</td>
      <td>{{user.email}}</td>
      <td>{{ user.roles|join(', ') }}</td>   
      {% if is_granted('ROLE_ADMIN') %}
			<td>
        <ul class="list-inline">
					<li class="list-inline-item">
            <a href="/crud/edit/{{user.id}}" class="btn btn-sm btn-success">Edit</a>
          </li>
          <li class="list-inline-item">
            <a href="/crud/delete/{{user.id}}" class="btn btn-sm btn-danger">Delete</a>
          <li>

        </ul>
      </td>
      {% endif %}
      
    </tr>
  </tbody>
</table>
{% endblock %}