{% extends 'base.html.twig' %}
{% block body %}
    <div class="row"> 
        <a href="/" class="btn btn-danger">Back to main</a>
    </div>
    <h1 class="text-center mt-5"> Detail for {{user.username}} </h1>

    <table class="table mt-5">
  <thead>
    <tr>
      <th scope="col">User ID</th>
      <th scope="col">User Name</th>
      <th scope="col">Password</th>
      <th scope="col">User Role</th>
      <th scope="col">Join Time</th>
      <th scope="col">Handle</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th scope="row">{{user.id}}</th>
      <td>{{user.username}}</td>
      <td>{{user.password}}</td>
      <td>{{user.userrole}}</td>
	  <td>{{user.createdate|date('j F Y')}}</td>
      <td>
        <ul class="list-inline">
			<li class="list-inline-item">
                <a href="/crud/edit/{{user.id}}" class="btn btn-sm btn-success">Edit</a>
            </li>
            <li class="list-inline-item">
                <a href="/crud/delete/{{user.id}}" class="btn btn-sm btn-danger">Delete</a>
            <li>
        </ul>
      </td>
    </tr>
  </tbody>
</table>
{% endblock %}